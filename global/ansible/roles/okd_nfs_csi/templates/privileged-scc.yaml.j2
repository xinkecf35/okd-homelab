apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: use-privileged-scc
  namespace: {{ okd_nfs_csi_namespace_name }}
rules:
  - apiGroups:
      - security.openshift.io
    resources:
      - securitycontextconstraints
    resourceNames:
      - privileged
    verbs:
      - use
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: nfs-csi-controller-use-privileged-scc
  namespace: {{ okd_nfs_csi_namespace_name }}
subjects:
  - kind: ServiceAccount
    name: {{ okd_nfs_csi_controller_service_account }}
    namespace: {{ okd_nfs_csi_namespace_name }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: use-privileged-scc
---
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: nfs-csi-node-use-privileged-scc
  namespace: {{ okd_nfs_csi_namespace_name }}
subjects:
  - kind: ServiceAccount
    name: {{ okd_nfs_csi_node_service_account }}
    namespace: {{ okd_nfs_csi_namespace_name }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: use-privileged-scc
